generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(uuid())
  name          String
  price         Float
  image_url     String
  descricao     String?
  createdAt DateTime @default(now())
  cartItems     CartItem[]
}

model Cart {
  id       String   @id @default(uuid())
  subtotal Float
  total    Float
  items    CartItem[]
  createdAt DateTime @default(now())
}

model CartItem {
  id         String   @id @default(uuid())
  quantity   Int
  product    Product @relation(fields: [productId], references: [id])
  productId  String
  cart       Cart    @relation(fields: [cartId], references: [id])
  cartId     String
  createdAt DateTime @default(now())
}
